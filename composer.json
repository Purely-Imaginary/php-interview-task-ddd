{
  "name": "lendable/interview",
  "type": "project",
  "bin": "/bin/calculate-fee",
  "autoload": {
    "psr-4": {
      "Lendable\\Interview\\": "src/"
    }
  },
  "require": {
    "php": ">=8.4",
    "monolog/monolog": "^3.9",
    "php-di/php-di": "^7.0",
    "symfony/event-dispatcher": "^7.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.5",
    "behat/behat": "^3.21",
    "friendsofphp/php-cs-fixer": "^3.75",
    "phpstan/phpstan": "^2.1",
    "rector/rector": "^2.0",
    "roave/security-advisories": "dev-latest"
  },
  "autoload-dev": {
    "psr-4": {
      "Lendable\\Interview\\": "tests/"
    }
  },
  "config": {
    "sort-packages": true,
    "optimize-autoloader": true
  },
  "scripts": {
    "rector-fix": "vendor/bin/rector process",
    "phpstan": "vendor/bin/phpstan analyse --memory-limit=-1 --no-progress",
    "cs-fixer-fix": "PHP_CS_FIXER_IGNORE_ENV=true vendor/bin/php-cs-fixer fix --config=.php-cs-fixer.dist.php",
    "phpunit-test": "vendor/bin/phpunit",
    "behat-test": "vendor/bin/behat -f progress",

    "check-all": [
      "@cs-fixer-fix",
      "@rector-fix",
      "@phpstan",
      "@phpunit-test",
      "@behat-test"
    ]
  }
}